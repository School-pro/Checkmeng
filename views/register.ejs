<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkmeng - Signup</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <style>
      body {
        padding-top: 56px; /* Offset for fixed navbar */
        background-color: #f8f9fa; /* Shaded background color */
      }

      .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
      }

      .login-form {
        max-width: 400px;
        margin: 50px auto; /* Center the form */
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #fff; /* Form background color */
      }

      .login-form-logo {
        text-align: center;
        margin-bottom: 20px;
      }

      .login-form-logo img {
        width: 100px; /* Adjust logo size */
        border-radius: 50%; /* Rounded border for logo */
      }

      .oauth-icons {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .oauth-icons a {
        margin: 0 10px;
        border-radius: 50%;
        padding: 10px;
        background-color: #f0f0f0;
        color: #000;
      }

      .oauth-icons a i {
        font-size: 24px;
        color: #007bff; /* Change the color to the desired color */
      }
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <%- include('partials/nav') %>

    <!-- Login form -->
    <div class="container">
      <div class="login-form">
        <div class="login-form-logo">
          <img src="web_dev.jpg" alt="Company Logo" />
        </div>
        <h1 class="text-center mb-4">Signup</h1>
        <form action="/auth/admin-register" method="POST">
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              placeholder="Enter Username"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              aria-describedby="emailHelp"
              placeholder="Enter email"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
          </div>
          <div class="form-group">
            <label for="school">School</label>
            <input
              type="text"
              name="school"
              class="form-control"
              id="school"
              placeholder="School"
              required
            />
          </div>
          <!-- <div class="form-group">
            <label for="role">Select Role</label>
            <select class="form-control" id="role" required>
              <option value="admin">School</option>
              <option value="superAdmin">School Admin</option>
            </select>
          </div> -->
          <button type="submit" class="btn btn-primary btn-block">
            Signup
          </button>
        </form>
        <p class="text-center mt-3">
          Already have an account? <a href="/login">Login</a>
        </p>
        <div class="text-center mt-3 oauth-icons">
          <a href="#"><i class="fab fa-google"></i></a>
          <a href="#"><i class="fab fa-facebook-f"></i></a>
        </div>
      </div>
    </div>
    <!-- footer -->
    <%- include('partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
